<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/fash_con_list_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/fash_con_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/fash_con_list_item_iv" />

    <TextView
        android:id="@+id/fash_con_list_item_tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fash_con_list_item_title"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/fash_con_list_item_iv" />


</RelativeLayout>