<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00" >
		<ImageView 
		    android:onClick="getBack"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_width="40dp"
            android:layout_height="40dp"
             android:background="@drawable/item_btn_back"
		    />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="版权说明"
            android:textColor="#fff"
            android:textSize="20sp" />

   
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欢迎对我们提出任何意见：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_boder" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="top"
                android:lines="5"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="请输入你的联系方式(任选一种)：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/item_boder"
            android:orientation="vertical" 
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffcdcdcd"
                    android:gravity="center"
                    android:text="电子邮箱"
                   android:paddingLeft="10dp"  
                   android:paddingRight="10dp"      
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#808080" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:lines="1"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080" />

            <LinearLayout
                android:layout_width="match_parent"
                 android:layout_weight="1"
                android:layout_height="0dp"
                >

                <TextView
                     
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffcdcdcd"
                    android:gravity="center"
                    android:paddingLeft="10dp"  
                   android:paddingRight="10dp" 
                    android:text="手机号码"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#808080" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:lines="1"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/item_yuanjiao_tijiao_cn"
            android:gravity="center"
            android:padding="10dp"
            android:text="提交"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>